{% extends 'base.html.twig' %}

{% block title %}Hello MovieController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
{{app.user ? 'Welcome ' ~ app.user.email : 'Welcome Guest'}}
<div>
{% if app.user %}
<a href="/addMovie" class="uppercase border border-gray-500 rounded text-lg py-4 px-6 mx-auto w-4/5 my-8">Add Movie</a>
{% endif %}
</div>
    <h1>Movie List ! âœ…</h1>

    This is the list of movies ({{ movies|length}}):
    <ul>
       {% for movie in movies %}
       <li>
       <img src="{{movie.imagePath}}" alt="{{movie.title}}" style="width: 100px; height: 150px;">
       <strong>{{movie.title}} </strong>
       <p>{{movie.description}}</p>
       <h6>Release Year : {{movie.releaseYear}}</h6>
       <a href="/showMovie/{{movie.id}}">View Details</a>
       <a href="/editMovie/{{movie.id}}">Edit</a>
       <a href="/deleteMovie/{{movie.id}}">Delete</a>

       </li>
       <br>
       {% endfor %}
    </ul>
    <a href="/{{app.user ? 'logout' : 'login'}}" >
    {{app.user ? 'Logout' : 'Login'}}
    </a>
</div>
{% endblock %}
